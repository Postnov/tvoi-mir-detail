                .d-i-table__col
                  span Ширина
                  .blue-tip.js-open-modal(data-modal="tip-width")
                .d-i-table__col
                  span Кол-во
                .d-i-table__col
                  span Итого

              // количество, длина, ширина. Выбор количества
